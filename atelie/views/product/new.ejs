<% include ../partials/header %>

<div class="container">

	<h1>Renata, adicione um novo produto</h1>

	<form method="post" action="/miti">
		<div class="controls">
			<div class="form-group">
				<label for="input1">Produto</label>
				<input type="text" id="input1" class="form-control" placeholder="Nome" name="product[name]">
			</div>
			<div class="form-group">
				<label for="input2">Image</label>
				<input type="text" id="input2" class="form-control" placeholder="Imagem" name="product[image]">
			</div>
			<div class="form-group">
				<label for="input3">Preço</label>
				<input type="text" id="input3" class="form-control" placeholder="Preço" name="product[price]">
			</div>
			<button type="submit">Enviar</button>
		</form>
	</div>
</div>

<% include ../partials/footer %>
