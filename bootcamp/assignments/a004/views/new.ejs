<% include ./partials/header %>
<div class="ui container segment">
  <form class="ui form" action="/blog" method="post">
    <div class="field">
      <label>Title</label>
      <input type="text" name="post[title]" placeholder="What's your post about?">
    </div>
    <div class="field">
      <label>Description</label>
      <textarea type="text" name="post[desc]" placeholder="Tell me more."></textarea>
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="post[img]" placeholder="A very descriptive image">
    </div>
    <button class="ui button" type="submit">Submit</button>
  </form>
</div>

<% include ./partials/footer %>
