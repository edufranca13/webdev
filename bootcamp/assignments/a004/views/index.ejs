<% include ./partials/header %>

<div class="container main text ui">
  <div class="ui huge header"> Restful Blog App</div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% posts.forEach(function(post) { %>
        <div class="item">
          <div class="image">
            <a href="/blog/<%= post._id %>"><img src= "<%= post.img %>"></a>
          </div>
          <div class="content">
            <a class="header" href="/blog/<%= post._id %>"> <%= post.title %> </a>
            <div class="meta"> <%= post.created %> </div>
            <div class="description"> <%- post.desc.substring(0, 100) %></div>
          </div>
          <a href="/blog/<%= post._id %>" class="violet icon button ui">
            <i class="icon right arrow">
              Read More
            </i>
          </a>
        </div>
          <% }); %>
      </div>
    </div>
  </div>

  <% include ./partials/footer %>
