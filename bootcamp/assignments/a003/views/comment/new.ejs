<% include ../partials/header %>

<div class="ui container">
    <h1>Add Comment to <%= camp.name %> </h1>
<form class="ui form" action="/campground/<%= camp._id %>/comment" method="POST">
  <div class="field">
    <label>Author</label>
    <input type="text" name="comment[author]" placeholder="Author's name">
  </div>
   <div class="field">
    <label>Comment</label>
    <textarea name="comment[text]"></textarea>
  </div>
  <button class="ui button" type="submit">Submit</button>
</form>

</div>

<% include ../partials/footer %>
